// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL") // Uses connection pooling
  directUrl = env("DATABASE_URL")      // Used for migrations
}

model Reflection {
  id          String   @id @default(uuid())
  title       String
  dateRange   String
  monthGroup  String
  slug        String   @unique
  content     String?
  createdAt   DateTime @default(now())
  
  @@index([createdAt])
  @@index([monthGroup])
}

model RevokedToken {
  id        String   @id @default(uuid())
  jti       String   @unique
  expiresAt DateTime
  revokedAt DateTime @default(now())
}

model PersonalEntry {
  id        String   @id @default(uuid())
  title     String
  content   String
  category  String?  @default("General")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  attachments PersonalFile[]
  
  @@index([createdAt])
}

model PersonalFile {
  id           String        @id @default(uuid())
  entryId      String
  entry        PersonalEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  filename     String?       @unique // System name on disk (now optional)
  originalName String        // Original upload name
  mimeType     String
  size         Int           // Bytes
  url          String?       // URL to the file in Vercel Blob (now optional)
  createdAt    DateTime      @default(now())
}

model Post {
  id         String   @id @default(uuid())
  title      String
  slug       String   @unique
  content    String
  excerpt    String?
  coverImage String?
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@index([createdAt])
  @@index([published])
}

model Project {
  id           String       @id @default(uuid())
  title        String
  description  String
  links        String       // JSON string of [{label: string, href: string}]
  technologies Technology[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  @@index([createdAt])
}

model Technology {
  id        String    @id @default(uuid())
  name      String    @unique
  icon      String    // SVG string or URL
  projects  Project[]
  createdAt DateTime  @default(now())
  
  @@index([name])
}

model ReadingItem {
  id        String   @id @default(uuid())
  title     String
  authors   String?
  category  String
  link      String
  type      String   // "Paper" | "Book"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([createdAt])
}
